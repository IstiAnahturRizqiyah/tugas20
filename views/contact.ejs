<div class="container text-center">
  <h1>Data Daftar Kontak</h1>
  <br />
  <div class="row">
    <div class="col-md-8 mx-auto">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Nama</th>
            <th scope="col">No.Telepon</th>
            <th scope="col">Email</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <!-- Untuk mengecek data, apakah data daftar kontak kosong di EJS -->
          <% if (isEmpty) { %>
          <!-- Jika data daftar kontak kosong, tampilkan pesan "Contact Tidak Tersedia!!" -->
          <h3 class="container">Contact Tidak Tersedia!!</h3>
          <% } else { %>
          <!-- Iterasi melalui daftar kontak menggunakan forEach -->
          <% contacts.forEach((contact, i) => { i++ %>
          <tr>
            <th scope="row"><%= i++ %></th>
            <td><%= contact.nama %></td>
            <td><%= contact.hp %></td>
            <td><%= contact.email %></td>
            <td>
              <a href="/contact/<%= contact.nama %>" class="btn btn-success badge rounded-pill"><i class="bi bil-info-circle"></i>detail</a>
            </td>
          </tr>
          <% }); %> <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>
